{
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./.tmp/build/",
    "declaration": true,
    "lib": ["es2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "./src/visual.ts"        // ← pbiviz 5.x reads files[0] here
  ],
  "include": ["src/**/*.ts"] // ← optional; keeps TS aware of helpers/settings
}
