{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Power BI Visual",
            "program": "${workspaceFolder}/node_modules/.bin/pbiviz",
            "args": ["start"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "timeout": 30000,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}